<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="200"
    android:viewportHeight="200">
    
    <group 
        android:pivotX="100" 
        android:pivotY="100" 
        android:scaleX="0.55" 
        android:scaleY="0.55">
        
        <!-- LAYER 1: S-Middle Segment (Behind/Inside Wall) -->
        <path
            android:pathData="M145,120 C145,90 55,110 55,80"
            android:strokeColor="@color/white"
            android:strokeWidth="16"
            android:strokeLineCap="round"
            android:strokeLineJoin="round"
            android:fillColor="#00000000" />
            
        <!-- LAYER 2: Obstacle Wall (Opaque 3D Block) -->
        
        <!-- Front Face (End Cap, Facing User) -->
        <!-- New face at the extended bottom-left tip -->
        <path
            android:pathData="M75,120 L85,130 L85,150 L75,140 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:angle="90"
                    android:startColor="#B0FFFFFF"
                    android:endColor="#40FFFFFF"
                    android:type="linear" />
            </aapt:attr>
        </path>
        
        <!-- Side Face (Right) -->
        <!-- Extended start from (95,120) to (85,130) -->
        <path
            android:pathData="M85,130 L135,80 L135,100 L85,150 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:angle="45"
                    android:startColor="#80FFFFFF"
                    android:endColor="#10FFFFFF"
                    android:type="linear" />
            </aapt:attr>
        </path>

        <!-- Top Face -->
        <!-- Extended BL from (85,110) to (75,120) -->
        <path
            android:pathData="M75,120 L125,70 L135,80 L85,130 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:angle="45"
                    android:startColor="#D0FFFFFF"
                    android:endColor="#60FFFFFF"
                    android:type="linear" />
            </aapt:attr>
        </path>

        <!-- LAYER 3: S-Outer Segments (In Front of Wall) -->
        
        <!-- Bottom Loop -->
        <!-- M50,160 -> (145,120) -->
        <path
            android:pathData="M50,160 
                             C110,160 145,160 145,120"
            android:strokeColor="@color/white"
            android:strokeWidth="16"
            android:strokeLineCap="round"
            android:strokeLineJoin="round"
            android:fillColor="#00000000" />

        <!-- Top Loop + Arrow -->
        <!-- (55,80) -> End -->
        <path
            android:pathData="M55,80 
                             C55,40 100,40 150,40"
            android:strokeColor="@color/white"
            android:strokeWidth="16"
            android:strokeLineCap="round"
            android:strokeLineJoin="round"
            android:fillColor="#00000000" />
            
        <!-- Arrowhead -->
        <path
            android:pathData="M140,20 L170,40 L140,60"
            android:fillColor="@color/white"
            android:strokeColor="@color/white"
            android:strokeWidth="4"
            android:strokeLineJoin="round"
            android:strokeLineCap="round"/>
            
    </group>
</vector>
